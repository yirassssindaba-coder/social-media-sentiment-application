<Window x:Class="SocialMediaSentimentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SocialMediaSentimentApp"
        Title="Social Media Sentiment Analysis" Height="800" Width="1180"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="0" Padding="18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="social-media-sentiment-analysis-results" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="CRUD data post + analisis sentimen + dashboard + report (C# WPF)" Foreground="{StaticResource MutedTextBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" local:StackPanelSpacing.Spacing="10">
                    <Button x:Name="BtnLoadDemo" Content="Load Demo Data" Click="BtnLoadDemo_Click" Style="{StaticResource SecondaryButton}"/>
                    <Button x:Name="BtnRunAnalysisTop" Content="Run Analysis" Click="BtnRunAnalysis_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main -->
        <TabControl Grid.Row="1" Margin="0,16,0,0">
            <!-- POSTS -->
            <TabItem Header="Posts (CRUD)">
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" local:StackPanelSpacing.Spacing="10">
                                <Button Content="Import CSV" Click="BtnImportCsv_Click" Style="{StaticResource SecondaryButton}"/>
                                <Button Content="Export CSV" Click="BtnExportCsv_Click" Style="{StaticResource SecondaryButton}"/>
                                <Button Content="New" Click="BtnNew_Click" Style="{StaticResource SecondaryButton}"/>
                                <Button Content="Delete" Click="BtnDelete_Click" Style="{StaticResource DangerButton}"/>
                            </StackPanel>

                            <DataGrid x:Name="GridPosts" Grid.Row="1" Margin="0,14,0,0"
                                      SelectionMode="Single" SelectionChanged="GridPosts_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm}" Width="170"/>
                                    <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="120"/>
                                    <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Grid.Row="2" Margin="0,12,0,0" Foreground="{StaticResource MutedTextBrush}"
                                       Text="Data tersimpan otomatis ke LocalAppData (posts.json)."/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" Grid.Column="1">
                        <StackPanel local:StackPanelSpacing.Spacing="10">
                            <TextBlock Text="Edit / Add Post" FontSize="16" FontWeight="SemiBold"/>

                            <TextBlock Text="Date" Foreground="{StaticResource MutedTextBrush}"/>
                            <DatePicker x:Name="InputDate"/>

                            <TextBlock Text="Time (HH:mm)" Foreground="{StaticResource MutedTextBrush}"/>
                            <TextBox x:Name="InputTime" Text="12:00"/>

                            <TextBlock Text="Platform" Foreground="{StaticResource MutedTextBrush}"/>
                            <ComboBox x:Name="InputPlatform">
                                <ComboBoxItem Content="X/Twitter"/>
                                <ComboBoxItem Content="Instagram"/>
                                <ComboBoxItem Content="TikTok"/>
                                <ComboBoxItem Content="YouTube"/>
                                <ComboBoxItem Content="Reddit"/>
                                <ComboBoxItem Content="Forum"/>
                                <ComboBoxItem Content="News"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>

                            <TextBlock Text="Text" Foreground="{StaticResource MutedTextBrush}"/>
                            <TextBox x:Name="InputText" Height="220" AcceptsReturn="True" TextWrapping="Wrap"/>

                            <Button x:Name="BtnSave" Content="Save" Click="BtnSave_Click"/>
                            <TextBlock x:Name="TxtStatus" Foreground="{StaticResource MutedTextBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- ANALYSIS -->
            <TabItem Header="Analysis">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Dashboard" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Klik Run Analysis untuk membuat ringkasan + chart + prediksi per post." Foreground="{StaticResource MutedTextBrush}" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" local:StackPanelSpacing.Spacing="10">
                                <Button Content="Run Analysis" Click="BtnRunAnalysis_Click"/>
                                <Button Content="Generate Report" Click="BtnGenerateReport_Click" Style="{StaticResource SecondaryButton}"/>
                                <Button Content="Open Report File" Click="BtnOpenReport_Click" Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Total Posts" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock x:Name="KpiTotal" Text="0" FontSize="26" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Negative" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock x:Name="KpiNeg" Text="0%" FontSize="26" FontWeight="SemiBold"/>
                                <TextBlock x:Name="KpiNegCount" Text="0 posts" Foreground="{StaticResource MutedTextBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Neutral" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock x:Name="KpiNeu" Text="0%" FontSize="26" FontWeight="SemiBold"/>
                                <TextBlock x:Name="KpiNeuCount" Text="0 posts" Foreground="{StaticResource MutedTextBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Positive" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock x:Name="KpiPos" Text="0%" FontSize="26" FontWeight="SemiBold"/>
                                <TextBlock x:Name="KpiPosCount" Text="0 posts" Foreground="{StaticResource MutedTextBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Style="{StaticResource CardStyle}" Margin="0,0,12,12">
                            <StackPanel>
                                <TextBlock Text="Charts" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="Distribusi overall, per platform, dan tren negative share harian." Foreground="{StaticResource MutedTextBrush}" Margin="0,4,0,0"/>
                                <StackPanel Margin="0,10,0,0" local:StackPanelSpacing.Spacing="10">
                                    <Image x:Name="ImgOverall" Height="210" Stretch="Uniform"/>
                                    <Image x:Name="ImgPlatform" Height="210" Stretch="Uniform"/>
                                    <Image x:Name="ImgTrend" Height="210" Stretch="Uniform"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Top Keywords" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtKeywords" Text="(Run Analysis dulu)" Foreground="{StaticResource MutedTextBrush}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,12" local:StackPanelSpacing.Spacing="10">
                                    <TextBlock Text="Filter Sentiment:" VerticalAlignment="Center" Foreground="{StaticResource MutedTextBrush}"/>
                                    <ComboBox x:Name="FilterSentiment" Width="170" SelectionChanged="FilterSentiment_SelectionChanged">
                                        <ComboBoxItem Content="all"/>
                                        <ComboBoxItem Content="negative"/>
                                        <ComboBoxItem Content="neutral"/>
                                        <ComboBoxItem Content="positive"/>
                                    </ComboBox>
                                </StackPanel>

                                <DataGrid x:Name="GridPredictions" Grid.Row="2">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm}" Width="160"/>
                                        <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="110"/>
                                        <DataGridTextColumn Header="Sentiment" Binding="{Binding Sentiment}" Width="90"/>
                                        <DataGridTextColumn Header="Confidence" Binding="{Binding Confidence, StringFormat=0.00}" Width="90"/>
                                        <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- REPORT -->
            <TabItem Header="Report Preview">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="HTML Report (Preview)" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Klik Generate Report di tab Analysis, lalu preview di sini." Foreground="{StaticResource MutedTextBrush}" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" local:StackPanelSpacing.Spacing="10">
                                <Button Content="Generate Report" Click="BtnGenerateReport_Click"/>
                                <Button Content="Open Report File" Click="BtnOpenReport_Click" Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" Grid.Row="1" Margin="0,14,0,0" Padding="0">
                        <WebBrowser x:Name="BrowserReport"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- SETTINGS -->
            <TabItem Header="Settings">
                <Grid Margin="12">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel local:StackPanelSpacing.Spacing="10">
                            <TextBlock Text="Project Settings" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="Brand &amp; scope muncul di report." Foreground="{StaticResource MutedTextBrush}"/>

                            <TextBlock Text="Brand" Foreground="{StaticResource MutedTextBrush}" Margin="0,8,0,0"/>
                            <TextBox x:Name="InputBrand"/>

                            <TextBlock Text="Scope" Foreground="{StaticResource MutedTextBrush}"/>
                            <TextBox x:Name="InputScopeText" Height="90" AcceptsReturn="True" TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" local:StackPanelSpacing.Spacing="10" Margin="0,10,0,0">
                                <Button Content="Save Settings" Click="BtnSaveSettings_Click"/>
                                <Button Content="Open Data Folder" Click="BtnOpenDataFolder_Click" Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>

                            <TextBlock x:Name="TxtSettingsStatus" Foreground="{StaticResource MutedTextBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Margin="6,14,6,0" Foreground="{StaticResource MutedTextBrush}"
                   Text="No CLI arguments needed. Run the app and click Load Demo / Run Analysis. Data saved to LocalAppData."/>
    </Grid>
</Window>
